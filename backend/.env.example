# API Configuration
app_name=Perso.ai Knowledge Chatbot
app_version=1.0.0
debug=False

# Server Configuration
host=0.0.0.0
port=8000

# CORS Configuration (comma-separated)
cors_origins=http://localhost:3000,http://127.0.0.1:3000

# Qdrant Configuration
qdrant_host=localhost
qdrant_port=6333
qdrant_collection_name=perso_ai_qa
# qdrant_api_key=  # Optional, for Qdrant Cloud

# Embedding Configuration
embedding_model=gemini-embedding-001
embedding_dimension=768

# Retrieval Configuration
top_k_retrieval=3
similarity_threshold=0.5

# LLM Configuration (Google Gemini)
gemini_api_key=your_gemini_api_key_here
llm_model=gemini-2.0-flash
llm_temperature=0.1
llm_max_tokens=512

# Query Rewriter Configuration
query_rewriter_model=gemini-2.0-flash
query_rewriter_temperature=0.3
query_rewriter_max_tokens=100

# Data Configuration
data_file=data/Q&A.xlsx
